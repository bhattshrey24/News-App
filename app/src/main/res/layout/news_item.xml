<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:onClick="saveButtonOnClick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">



        <Button

            android:id="@+id/saveButtonId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/headlineTextView"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_save_24"
            app:backgroundTint="#000000"

            />
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headlineTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="description"
            android:layout_toLeftOf="@+id/saveButtonId"

            />

        <ImageView
            android:id="@+id/ImageOfArticle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"


            android:layout_marginBottom="8dp" />



        <TextView
            android:id="@+id/headlineTextView"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/ImageOfArticle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="AAj Ki TAza Khabar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>